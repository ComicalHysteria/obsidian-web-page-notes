{
  "manifest_version": 3,
  "name": "Obsidian Web Page Notes",
  "version": "1.0.0",
  "description": "Take notes about webpages in a side panel that integrates with Obsidian via the Local REST API plugin.",
  "permissions": [
    "activeTab",
    "sidePanel",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost/*",
    "https://localhost/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open Obsidian Notes"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
